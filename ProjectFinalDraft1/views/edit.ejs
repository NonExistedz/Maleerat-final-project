<html lang="en">

<%- include("./partials/head.ejs") %>

    <body>
        <%- include("./partials/nav.ejs") %>

            <div class="create-blog content">
                <form id="update_data" action="/blogs/update/<%= blog._id %>" enctype="multipart/form-data" method="post">
                    <input type="hidden" name="id" value="<%= blog._id %>">
                    <label for="name">Name:</label>
                    <input type="text" id="name" name="name" required value="<%= blog.name %>">
                    <label for="type">Type:</label>
                    <input type="text" id="type" name="type" value="<%= blog.type %>" required>
                    <label for="stock">Stock:</label>
                    <input type="text" id="stock" name="stock" required value="<%= blog.stock %>">
                    <label for="img">Image URL:</label>
                    <input type="text" id="img" name="img" required value="<%= blog.img %>">
                    <label for="body">Description:</label>
                    <textarea id="body" name="description" required><%= blog.description %></textarea>
                    <input type="submit" value="Save">
                </form>
            </div>
            <%- include("./partials/footer.ejs") %>
    </body>

</html>