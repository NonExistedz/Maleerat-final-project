<html lang="en">
<%- include("./partials/head.ejs") %>

    <body>
        <%- include("./partials/nav.ejs") %>

            <div class="create-blog content">
                <form action="/blogs" method="POST" enctype="multipart/form-data" onsubmit="return validateForm()">

                    <label for="name">Name:</label>
                    <input type="text" id="name" name="name" required>

                    <label for="type">Type:</label>
                    <input type="text" id="type" name="type" required>

                    <label for="description">Description:</label>
                    <textarea id="description" name="description" required></textarea>

                    <!-- Other input fields -->
                    <label for="stock">Stock:</label>
                    <input type="number" id="stock" name="stock" required>
                    <!-- Error message for invalid input -->
                    <p id="stockError" style="display: none; color: red;">Please input the number that is grater than 0</p>
                    <!-- Submit button -->

                    <label for="img">Upload URL Image:</label>
                    <input type="text" id="img" name="img" required>


                    <button>Submit</button>
                </form>
            </div>

            <%- include("./partials/footer.ejs") %>
                <script>
                    function validateForm() {
                        var stockInput = document.getElementById("stock").value;
                        if (stockInput < 0) {
                            // Show error message
                            document.getElementById("stockError").style.display = "block";
                            // Prevent form submission
                            return false;
                        }
                        // Allow form submission
                        return true;
                    }
                </script>

    </body>

</html>
